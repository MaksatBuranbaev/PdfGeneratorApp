<Window x:Class="PdfGeneratorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Generator" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="10">
            <TextBox Width="400" Height="30" Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="{Binding LabelText}" Margin="0,10,0,0" />
            <Button Content="Печать" Command="{Binding PrintCommand}" Width="100" Height="30" />
        </StackPanel>
    </Grid>
</Window>